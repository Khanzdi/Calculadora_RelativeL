<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#DDDDDD"
    tools:context="com.example.brayandavid.relativelayout.MainActivity">


    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#AAAAAA"
        android:gravity="center" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtDisplay"
        android:layout_marginTop="11dp"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnsiete"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tableLayout"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnsiete"
                android:text="7" />

            <Button
                android:id="@+id/btnocho"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnocho"
                android:text="8" />

            <Button
                android:id="@+id/btnnueve"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnnueve"
                android:text="9" />

            <Button
                android:id="@+id/btndividir"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#EE0000"
                android:textSize="20dp"
                android:onClick="Division"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btncuatro"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btncuatro"
                android:text="4" />

            <Button
                android:id="@+id/btncinco"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btncinco"
                android:text="5" />

            <Button
                android:id="@+id/btnseis"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnseis"
                android:text="6" />

            <Button
                android:id="@+id/btnmultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#EE0000"
                android:textSize="20dp"
                android:onClick="Multiplicacion"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnuno"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnuno"
                android:text="1" />

            <Button
                android:id="@+id/btndos"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btndos"
                android:text="2" />

            <Button
                android:id="@+id/btntres"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btntres"
                android:text="3" />

            <Button
                android:id="@+id/btnrestar"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#EE0000"
                android:textSize="20dp"
                android:onClick="Resta"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnpunto"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnpunto"
                android:text="." />

            <Button
                android:id="@+id/btncero"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btncero"
                android:text="0" />

            <Button
                android:id="@+id/btnigual"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#33CCFF"
                android:textSize="20dp"
                android:onClick="btnigual"
                android:text="=" />

            <Button
                android:id="@+id/btnsumar"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#EE0000"
                android:textSize="20dp"
                android:onClick="Sumar"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnelevadoa"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#FF0000"
                android:textSize="20dp"
                android:onClick="ExponenteN"
                android:text="X^N" />

            <Button
                android:id="@+id/btnborrar"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#FF0000"
                android:textSize="20dp"
                android:onClick="btnborrar"
                android:text="DEL" />

            <Button
                android:id="@+id/btnreset"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#00CC00"
                android:textSize="20dp"
                android:onClick="btnreset"
                android:text="AC" />

            <Button
                android:id="@+id/btncerrar"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:background="#FF0000"
                android:textSize="20dp"
                android:onClick="btncerrar"
                android:text="OFF" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
